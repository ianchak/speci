{
  "version": "1.0.0",
  "_comment": "Speci CLI Configuration - Autonomous task loop orchestrator",

  "paths": {
    "progress": "docs/PROGRESS.md",
    "tasks": "docs/tasks",
    "logs": ".speci-logs",
    "lock": ".speci-lock"
  },

  "agents": {
    "plan": null,
    "task": null,
    "refactor": null,
    "impl": null,
    "review": null,
    "fix": null,
    "tidy": null
  },

  "copilot": {
    "permissions": "allow-all",
    "model": null,
    "models": {
      "plan": null,
      "task": null,
      "refactor": null,
      "impl": null,
      "review": null,
      "fix": null,
      "tidy": null
    },
    "extraFlags": []
  },

  "gate": {
    "commands": ["npm run lint", "npm run typecheck", "npm test"],
    "maxFixAttempts": 5,
    "_comment_strategy": "Optional: 'sequential' (default) or 'parallel'. Parallel can speed up independent commands by 30-50%.",
    "strategy": "sequential"
  },

  "loop": {
    "maxIterations": 100
  }
}
